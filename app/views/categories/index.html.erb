<header id="categories-top">
  <div id="header-container">
    <div class="parallax-background"></div>
    <div id="header-overlay" class="parallax-overlay">
      <canvas id="dot-canvas" class="hidden-md-down"></canvas>
      <div class="container align-items-center h-100">
        <div class="header-table">
          <div class="header-title">
            <h1 class="display-4 shrink">Categories</h1>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<section id="categories-index">
  <div class="container">
    <% @categories.each do |category| %>
      <div class="section-content row">
        <div class="col-md-4">
          <h1><%= category.title %></h1>
          <p><%= category.description %></p>
          <% category.articles.each do |article| %>
            <h3><%= article.title %></h3>
            <p><%= article.description %></p>
            <%= link_to 'Read more...', articles_show_path(article) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>